{
  "version": 2,
  "routes": [
    { 
      "src": "/api/ai/(.*)", 
      "dest": "/api/ai/$1",
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS",
        "Access-Control-Allow-Headers": "Content-Type, Authorization, X-Requested-With"
      }
    },
    { 
      "src": "/(.*)", 
      "dest": "/public/$1" 
    }
  ],
  "functions": {
    "api/ai/generate.js": {
      "maxDuration": 30,
      "memory": 1024
    }
  }
}
